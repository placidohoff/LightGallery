<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*@Scripts.Render("~/Scripts/sos.ri.gov")*@

    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">*@

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.default.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">




    <link href="~/Content/layout-b.css" rel="stylesheet" />
    <link href="~/Content/pages.css" rel="stylesheet" />
    <link href="~/Content/lightgallery.css" rel="stylesheet">
    
    @*<link href="~/Content/slidebars.min.css" rel="stylesheet" />*@



</head>

<body>
    <header style="padding-top: 0px;">
        <div class="content-wrapper">
            <div>
                @Html.Partial("_Header")
            </div>
        </div>
    </header>
    <div id="body">
        @*@Html.Partial("~/Views/Shared/_SideMenu.cshtml")*@
        <div class="content-wrapper main-content clear-fix" style="border: 2px solid purple; min-height:85vh; display: flex; justify-content:center; ">

            <!--Maybe I should make this a partial and drop it into each view...?-->


            <div id="main" class="content-main contain" style="">



                @Html.Partial("~/Views/Shared/_SideMenu.cshtml")

                @RenderBody()


            </div>



        </div>
    </div>
    <footer>
        <div class="content-wrapper">
            <div>
                @Html.Partial("_Footer")
            </div>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@Scripts.Render("~/bundles/fontawesome")*@

    @RenderSection("scripts", required: false)

    <style>
        #body {
            background: url(/assets/img/background/statehousedusk.jpg);
            background-size: cover;
            background-attachment: fixed;
            z-index: -1;
        }
    </style>

    @*<script src="~/Scripts/slidebars.min.js"></script>*@
    <script src=”https://cdnjs.cloudflare.com/ajax/libs/slidebars/2.0.2/slidebars.min.js” type=”text/javascript”></script>

    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/sos.ri.gov.js"></script>
    @*<link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
        <link href="~/Content/owl.theme.default.css" rel="stylesheet" />*@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="~/Scripts/lightgallery-all.min.js"></script>
    @*<script src="~/Scripts/owl.carousel.min.js"></script>*@

    <script>
        //alert('Ok.....')
        $(document).ready(function () {
            $('#lightgallery').lightGallery();
        });

        let isOpen = false;
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
            //document.getElementById("menu-row").style.marginLeft = "250px";
            document.body.style.backgroundColor = "rgba(0,0,0,0.4)";

            //$("#mySideNav").style.width = "250px;"
            //$("#main, #menu-row").style.marginLeft = "250px";
            isOpen = true;
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            //document.getElementById("menu-row").style.marginLeft = "0";
            document.body.style.backgroundColor = "white";
            isOpen = false
        }

        $(document).on('click', function (e) {
            if (!$(event.target).is('.side-nav', '.content-main')) {
                closeNav()
            }
        });

        $('.hamburger').on('click', function (e) {
            if (!isOpen) {
                openNav();
                isOpen = true;
            }
            else {
                closeNav();
                isOpen = false;
            }
        })



        console.log(isOpen)
    </script>


</body>
</html>


